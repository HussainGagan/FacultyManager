<%- include("partials/admHeader"); -%>

<div class="admTimeTable">
  <% if (successTimeTable) { %>
  <script type="text/javascript">
    swal({
    text: "Succesfully Added Time-Table Document",
    icon: "success",
  });
  </script>
  <% } %>
<form class="admTime" action="/admTimeTable" method="post">
<div class="form-group timeTableFormGroup ">
  <label for="facName">Faculty</label>
      <select name="facName" id="facName" class="form-control">
        <option selected>Choose a faculty</option>
        <% listOfFacName.forEach(function(facName){ %>
        <option value="<%=facName.name%>"><%=facName.name%></option>
        <%  }) %>
      </select>
    </div>
    <div class="form-group timeTableFormGroup">
      <label for="day">Day</label>
          <select name="day" id="day" class="form-control">
            <option selected>Choose a Day</option>
            <option>Monday</option>
            <option>Tuesday</option>
            <option>Wednesday</option>
            <option>Thursday</option>
            <option>Friday</option>
          </select>
        </div>
        <div class="form-group timeTableFormGroup">
          <label for="time">Time</label>
          <input type="text" class="form-control" name="time" placeholder="Enter Time">
            </div>
            <div class="form-row">
              <div class="form-group timeTableFormGroup col-md-6">
                <label for="subject">Subject</label>
                <input type="text" class="form-control" name="subject" placeholder="Subject Description">
              </div>
              <div class="form-group timeTableFormGroup col-md-6">
                <label for="subLocation">Location</label>
                <input type="text" class="form-control" name="subLocation" placeholder="Location">
              </div>
              </div>
              <button type="submit" class="btn btn-primary addTime">Add</button>
</form>
</div>

<%- include("partials/admFooter"); -%>
